# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env on EC2 and update values
# ===========================================

# Database Configuration (RDS MySQL)
DB_SERVER=your-rds-endpoint.region.rds.amazonaws.com
DB_NAME=job_portal_cf
DB_USER=admin
DB_PASSWORD=your-rds-password

# JWT Configuration (USE STRONG KEY IN PRODUCTION!)
JWT_KEY=GENERATE_A_STRONG_64_CHAR_KEY_HERE_USE_OPENSSL_OR_SIMILAR
JWT_ISSUER=JobPortal.API
JWT_AUDIENCE=JobPortal.Client
JWT_EXPIRY_MINUTES=60

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# JSearch API Configuration
JSEARCH_API_KEY=your-jsearch-api-key

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://your-ec2-ip:5173

# ASP.NET Environment
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:5000
